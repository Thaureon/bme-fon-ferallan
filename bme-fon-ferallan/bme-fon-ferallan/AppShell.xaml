<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="bme_fon_ferallan.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:bme_fon_ferallan"
    xmlns:clicker="clr-namespace:bme_fon_ferallan.Clicker"
    Shell.FlyoutBehavior="Flyout"
    Title="bme_fon_ferallan">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Clicker"
        ContentTemplate="{DataTemplate clicker:ClickerPage}"
        Route="ClickerPage" />
</Shell>
